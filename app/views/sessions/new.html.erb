<h1>Log in</h1>
<span id="notice"><%= notice %></span>
<%= form_tag('/login') do %>
  	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag 'email' %>
  	</div>

  	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag 'password' %>
	</div>

	<div class="actions">
		<%= submit_tag("Log in") %>
	</div>
<% end %>