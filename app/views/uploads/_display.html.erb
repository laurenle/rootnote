<!--Displays Upload elements in a nice 3 column grid-->
<% if @user.uploads.empty? %>
  <b>No uploads yet!</b>
<% else %>
  <table>
  <% i = 1 %>
  <tr>
  <% for upload in @user.uploads.each %>
      <td><%= image_tag upload.file.url(:thumb) %></td>
      <td><%= link_to 'Delete', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% if (i % 3) == 0 %>
      </tr><tr>
    <% end %>
    <% i += 1 %>
  <% end %>
  </tr>
  </table>
<% end %>