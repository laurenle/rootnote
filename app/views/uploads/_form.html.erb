<%= form_for upload, multipart: true, remote: true, method: :post, html: {id: 'upload-form', name: 'upload-form'}, data: {type: 'script'} do |f| %>
  <% if upload.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(upload.errors.count, "error") %> prohibited this file from being uploaded:</h2>

      <ul>
      <% upload.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Upload image:</label>
    <%= f.file_field :file %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </div>

  <div class="actions">
    <%= f.submit "Upload" %>
  </div>
<% end %>