<p id="notice"><%= notice %></p>

<h2>Notes</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date modified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.updated_at.to_formatted_s(:long)  %></td>
        <td><%= link_to 'Show', folder_note_path(note.folder_id, note) %></td>
        <td><%= link_to 'Edit', edit_folder_note_path(note.folder_id, note) %></td>
        <td><%= link_to 'Delete', folder_note_path(note.folder_id, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if defined? folder %>
  <%= link_to "Create note in #{folder.name}", new_folder_note_path(folder, Note.new()) %> | 
<% end %>