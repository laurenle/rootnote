<%= stylesheet_link_tag "wysiwyg" %>
<script type="text/javascript">
	$(document).ready(function() {
		var height = $(window).height() - $("header").height() - $("#controls").height();
		$("#notecontainer").css("height", height);
	});
</script>

<div id="controls">
	<%= link_to "Back to #{@folder.name}", folder_path(@folder) %>
	<%= link_to "Edit", edit_folder_note_path(@folder, @note) %>
	<span id="notice"><%= notice %></span>
</div>

<div id="notecontainer">
	<div id="note">
		<h1 id="note_title"><%= @note.title %></h1>
		<hr>
		<%= sanitize @note.body, tags: %w(i u b ul ol li strong font img h1 h2 h3 h4 h5 br table tr td), attributes: %w(color src size font-style style class) %>
	</div>
</div>